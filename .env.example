# Backend Environment Configuration
# Copy this to .env and configure for your setup

# Server Configuration
PORT=3000
NODE_ENV=development

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Model Options
# Choose one: llama3.1:8b, llama3.1:70b, mistral:7b
OLLAMA_TEMPERATURE=0.7
OLLAMA_TOP_P=0.9
OLLAMA_TOP_K=40

# Database (Optional - for production)
# MONGODB_URI=mongodb://localhost:27017/calisthenics
# POSTGRES_URI=postgresql://user:password@localhost:5432/calisthenics

# JWT Secret (for authentication)
# JWT_SECRET=your-secret-key-here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:19006

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
